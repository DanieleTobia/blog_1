{% extends 'base.html.twig' %}
{% block title %}
    {{blog.getTitle()}}
{% endblock %}

{% block body %}
	<div class="container pb-5">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
			<a class="navbar-brand" href="#">Blog N.
				{{blog.id}}</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item active">
						<a href="{{ path('app_blog_home') }}">
							<button class="btn btn-secondary mr-2 mb-2">
								<i class="fa fa-home"></i>
								Home
							</button>
						</a>
					</li>
					<li class="nav-item">
						<a href="{{ path('app_main_createblog') }}">
							<button class="btn btn-secondary mb-2">
								<i class="fa fa-plus-square-o"></i>
								Create
							</button>
						</a>
					</li>
				</ul>
			</div>
		</nav>
	</div>
	<div class="container pt-5">
		<div class="col-lg-12 justify-content-center">
			<img src="{{asset(blog.getImage)}}" alt="immagine non presente" class=" img-fluid mx-auto d-block"/>
		</div>
		<div class="row mt-3 mx-auto d-block ">
			<div class="jumbotron shadow">
				<h1 class="display-4">
					Title:
					{{blog.title}}
				</h1>
				<p class="lead">Description:</p>
				<p>{{blog.getShortDescription()}}</p>
				<hr class="my-4">
				<p>{{blog.getBody()}}</p>
			</div>
		</div>
	{% endblock %}
